{
  "schemaVersion": 1,
  "id": "custompaintings",
  "version": "${version}",
  "name": "Custom Paintings",
  "description": "Add your own custom paintings to Minecraft.\n${library}",
  "authors": [
    "Roundaround"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/custom-paintings-mod",
    "sources": "https://github.com/Roundaround/mc-fabric-custom-paintings",
    "issues": "https://github.com/Roundaround/mc-fabric-custom-paintings/issues"
  },
  "license": "MIT",
  "icon": "assets/custompaintings/icon.png",
  "environment": "*",
  "entrypoints": {
    "client": [
      "me.roundaround.custompaintings.client.CustomPaintingsClientMod"
    ],
    "server": [
      "me.roundaround.custompaintings.server.CustomPaintingsServerMod"
    ],
    "main": [
      "me.roundaround.custompaintings.CustomPaintingsMod"
    ],
    "modmenu": [
      "me.roundaround.custompaintings.compat.modmenu.ModMenuImpl"
    ],
	"cardinal-components": [
		"me.roundaround.custompaintings.CustomPaintingComponents"
	]
  },
  "mixins": [
    "custompaintings.mixins.json"
  ],
  "custom": {
    "loom:injected_interfaces": {
      "net/minecraft/class_1534": [
        "me/roundaround/custompaintings/entity/decoration/painting/ExpandedPaintingEntity"
      ]
    },
	"cardinal-components": [
		"custompaintings:painting_data"
	]
  },
  "depends": {
    "fabric-api": "*",
    "minecraft": "1.21.*",
    "java": ">=17"
  }
}
